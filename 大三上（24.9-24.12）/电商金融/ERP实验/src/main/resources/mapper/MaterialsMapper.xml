<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.example.erp.mapper.MaterialsMapper">

    <select id="getMaterialsMethod" resultType="java.lang.String">
        SELECT method FROM materials WHERE id = #{id};
    </select>

    <select id="getMaterialsOperationLeadTime" resultType="java.lang.Integer">
        SELECT operation_lead_time FROM materials WHERE id = #{id};
    </select>

    <select id="getLossRate" resultType="java.lang.Double">
        SELECT loss_rate FROM materials WHERE id = #{id};
    </select>

    <select id="getIdByName" resultType="java.lang.String">
        SELECT id FROM materials WHERE name = #{name};
    </select>

</mapper>